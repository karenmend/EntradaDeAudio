        <TextBlock HorizontalAlignment="Left" Margin="26,20,0,0" TextWrapping="Wrap" Text="Elegir Dispositivo:" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbDispositivo" HorizontalAlignment="Left" Margin="24,41,0,0" VerticalAlignment="Top" Width="748"/>
        <Button x:Name="btnIniciar" Content="Iniciar" HorizontalAlignment="Left" Margin="26,74,0,0" VerticalAlignment="Top" Width="75" Height="31" Click="btnIniciar_Click"/>
        <Button x:Name="btnDetener" Content="Detener" HorizontalAlignment="Left" Margin="116,74,0,0" VerticalAlignment="Top" Width="75" Height="31" Click="btnDetener_Click"/>
        <Slider x:Name="sldMicrofono" HorizontalAlignment="Left" Margin="219,74,0,0" VerticalAlignment="Top" Width="22" Orientation="Vertical" Height="148" Maximum="1"/>

    </Grid>
</Window>
